{
    "manifest_version": 2,
    "name": "Share shopping lists from Ocado",
    "description": "Share shopping lists with friends and between Ocado accounts",
    "version": "1.0",
    "author": "Jon Besga",
    "icons": {
        "16": "icons/ocado-16.png",
        "48": "icons/ocado-48.png",
        "128": "icons/ocado-128.png"
    },
    "permissions": [
        "declarativeContent", "activeTab", "downloads"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.ocado.com/*",
                "http://*.ocado.com/*"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ]
}