{
    "manifest_version": 2,
    "name": "Share shopping lists from Ocado",
    "description": "Share shopping lists between Ocado accounts",
    "version": "0.5",
    "author": "Jon Besga",
    "icons": {
        "16": "ocado-16.png",
        "48": "ocado-48.png",
        "128": "ocado-128.png"
    },
    "permissions": [
        "storage", "declarativeContent", "activeTab"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html"
    }
}